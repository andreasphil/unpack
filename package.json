{
  "name": "@andreasphil/unpack",
  "version": "0.0.0",
  "description": "A minimal template for JavaScript modules",
  "author": "Andreas Philippi",
  "license": "MIT",
  "type": "module",
  "repository": "https://github.com/andreasphil/unpack",
  "exports": {
    ".": {
      "import": "./mod.js",
      "types": "./dist/mod.d.ts"
    }
  },
  "scripts": {
    "test": "node --test",
    "test:watch": "node --test --watch",
    "build": "node --run build:types",
    "build:types": "tsc",
    "preversion": "node --run test && node --run build && git add ./dist",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.6",
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3"
  }
}
